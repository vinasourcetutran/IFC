    <script type="text/javascript">

        $(function () {
            $('#subscribe-btn').click(function (e) {
                e.preventDefault();
                var result = checkValid();
                if (result == '') {

                    $('#subscribe-btn').hide();
                    $('#imgLoader').show();

                    $.post("/handlers/AddNewsLetter.ashx",
                    {
                        email: $('#newsletter-mail').val()

                    },
                    function (data) {
                        $('#imgLoader').hide();
                        $('#subscribe-btn').show();
                        if (!data.Error) {
                            //success!                                
                            alert(data.Message);
                        }
                        else {
                            alert(data.Message);
                        }
                    }, 'json');
                }
                else {
                    alert(result);
                    $('#newsletter-mail').focus();
                }
            });
        });

        function checkValid() {
            var result = '';

            if ($('#newsletter-mail').val() == '') {
                result += 'Please enter your email address\n';
            }
            else if (!isValidEmail($('#newsletter-mail').val())) {
                result += 'Please enter your valid email address\n';
            }

            return result;
        }

        function isValidEmail(email) {
            //return /^[\w-\.]+@@([\w-]+\.)+[\w-]{2,4}$/.test(email);
            var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            return re.test(email);
        }
    </script>
 
