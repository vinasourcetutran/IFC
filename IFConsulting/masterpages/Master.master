    <script type="text/javascript">
        $(function () {
            $('#Nav a.active').removeClass('active');
            var currentUrl = location.href.toLowerCase();
            if (currentUrl.indexOf("/qas#") >= 0 || currentUrl.indexOf("/qas") >= 0) {
                $('#Nav a.active').removeClass('active');
                $('#nav01 a').addClass('active');
            } else {
                $('#Nav a').each(function () {
                    //alert(this.href +":"+ location.href + ":" + location.href.indexOf(this.href));
                    if (location.href.toLowerCase().indexOf(this.href.toLowerCase()) >= 0) {
                        $('#Nav a.active').removeClass('active');
                        $(this).addClass('active');
                    }
                })
            }
            if ($('#Nav a.active').length == 0)
                $('#Nav a:first').addClass('active');
        })
    </script>
